<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/btn_recover_purple"
    android:orientation="horizontal" >

    <!-- 返回键 -->

    <ImageView
        android:id="@+id/iv_recover_device_trainguidance_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/img_back" />

    <TextView
        android:id="@+id/tv_title_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/iv_recover_device_trainguidance_back"
        android:text="训练指导"
        android:textColor="@android:color/white"
        android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_trainguidance1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:src="@drawable/device_01" />
        <TextView
            android:id="@+id/tv_guidanceurl01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="产后康复之盆底运动"
            android:textColor="@android:color/holo_purple"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/image_trainguidance2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/newguidance01" />
        <TextView
            android:id="@+id/tv_guidanceurl02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="让妈妈有个健康的盆底！"
            android:textColor="@android:color/holo_purple"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>