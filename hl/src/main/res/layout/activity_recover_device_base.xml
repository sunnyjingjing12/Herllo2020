<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/btn_recover_purple"
            android:orientation="horizontal" >

            <!-- 返回键 -->

            <ImageView
                android:id="@+id/iv_recover_device_base_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/img_back" />

            <TextView
                android:id="@+id/tv_title_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_recover_device_base_back"
                android:text="基础训练"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:src="@drawable/device_01" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_recover_mainpage_power"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_recover_slow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:text="课程1 慢肌训练"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title_slow1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/btn_recover_slow"
                android:text=" 训练目标：建议至少训练5天或能持续夹紧康复器5秒"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_title_slow2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_title_slow1"
                android:text=" 正常使用康复器不会掉落"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_recover_mainpage_power"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_recover_fast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:text="课程2 快肌训练"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title_fast1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/btn_recover_fast"
                android:text=" 训练目标：建议至少训练5天或能持续夹紧康复器快收缩5次"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_title_fast2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_title_fast1"
                android:text=" 正常使用康复器不会掉落"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_recover_mainpage_power"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_recover_mix"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:text="课程3 混合训练"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title_mix1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/btn_recover_mix"
                android:text=" 训练目标：建议至少训练5天或能持续夹紧康复器协调训练5次"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_title_mix2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_title_mix1"
                android:text=" 正常使用康复器不会掉落"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_recover_mainpage_power"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_recover_scene"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:text="课程4 场景训练"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title_scene1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/btn_recover_scene"
                android:text=" 训练目标：建议至少训练5天或能持续夹紧康复器场景训练5次"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_title_scene2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_title_scene1"
                android:text=" 正常使用康复器不会掉落"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>